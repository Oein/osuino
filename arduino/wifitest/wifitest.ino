class OSUAPI {
  IOSUMapResponse search(String keyword = "", int page = 0) {
    if (!client.connect(server, 443))
      return IOSUMapResponse(false);
    client.print("GET https://sg.catboy.best/?mode=3&keys=4&limit=20&offset=");
    client.print(String(page * 20).c_str());
    client.print("&q=");
    client.print(urlEncode(keyword.c_str()).c_str());
    client.println(" HTTP/1.0");
    client.println("Host: sg.catboy.best");
    client.println("Connection: close");
    client.println();

    while (client.connected()) {
      String line = client.readStringUntil('\n');
      if (line == "\r") {
        Serial.println("headers received");
        break;
      }
    }

    
    while (client.available()) {
      char c = client.read();
      Serial.write(c);
    }

    client.stop();
    return IOSUMapResponse(false);
  }
};

void setup() {
  //Initialize serial and wait for port to open:
  Serial.begin(115200);
  delay(100);

  Serial.print("Attempting to connect to SSID: ");
